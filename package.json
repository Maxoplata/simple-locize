{
  "name": "simple-locize",
  "version": "1.0.1",
  "description": "A lightweight library for handling translations via the Locize API",
  "keywords": [
    "locize",
    "translation",
    "internationalization",
    "i18n"
  ],
  "author": "Maxamilian Demian",
  "funding": {
    "type": "individual",
    "url": "https://www.paypal.me/maxoplata"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "jest --config jestconfig.json",
    "type-check": "tsc --noEmit",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "dev": "npm run build -- --watch",
    "build": "tsup",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Maxoplata/simple-locize.git",
    "web": "https://github.com/Maxoplata/simple-locize"
  },
  "bugs": {
    "url": "https://github.com/Maxoplata/simple-locize/issues"
  },
  "homepage": "https://github.com/Maxoplata/simple-locize#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "tslint": "^6.1.3",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2"
  },
  "files": [
    "dist"
  ]
}
